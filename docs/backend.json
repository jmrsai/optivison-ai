
{
  "entities": {
    "userProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information, including their role.",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "role": {
          "type": "string",
          "enum": ["clinician", "patient"]
        }
      },
      "required": ["displayName", "email", "role"]
    },
    "patient": {
      "title": "Patient",
      "description": "Represents a patient in the clinic.",
      "type": "object",
      "properties": {
        "clinicianId": {
          "type": "string",
          "description": "The ID of the clinician assigned to this patient."
        },
        "name": {
          "type": "string",
          "description": "The full name of the patient."
        },
        "age": {
          "type": "number",
          "description": "The age of the patient."
        },
        "gender": {
          "type": "string",
          "enum": ["Male", "Female", "Other"]
        },
        "lastVisit": {
          "type": "string",
          "format": "date",
          "description": "The date of the patient's last visit."
        },
        "avatarUrl": {
          "type": "string",
          "format": "uri",
          "description": "URL of the patient's avatar image."
        },
        "riskLevel": {
          "type": "string",
          "enum": ["Low", "Medium", "High", "N/A"]
        },
        "history": {
          "type": "string",
          "description": "The patient's medical history."
        }
      },
      "required": ["clinicianId", "name", "age", "gender", "lastVisit", "riskLevel", "history"]
    },
    "scan": {
      "title": "Scan",
      "description": "Represents a single eye scan analysis for a patient.",
      "type": "object",
      "properties": {
        "patientId": {
          "type": "string",
          "description": "The ID of the patient this scan belongs to."
        },
        "clinicianId": {
          "type": "string",
          "description": "The ID of the clinician who performed the scan."
        },
        "date": {
          "type": "string",
          "format": "date",
          "description": "The date the scan was performed."
        },
        "imageUrl": {
          "type": "string",
          "format": "uri",
          "description": "URL of the eye scan image."
        },
        "clinicalNotes": {
          "type": "string",
          "description": "Clinical notes associated with the scan."
        },
        "status": {
          "type": "string",
          "enum": ["completed", "processing", "failed"]
        },
        "analysis": {
          "type": "object",
          "description": "The AI analysis output. Stored as a JSON object."
        },
        "report": {
          "type": "string",
          "description": "The full text report generated by the AI."
        }
      },
      "required": ["patientId", "clinicianId", "date", "imageUrl", "status"]
    },
    "message": {
      "title": "Message",
      "description": "A single message in a chat between two users.",
      "type": "object",
      "properties": {
        "text": { "type": "string" },
        "senderId": { "type": "string" },
        "receiverId": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" }
      },
      "required": ["text", "senderId", "receiverId", "timestamp"]
    }
  },
  "auth": {
    "providers": ["password", "google.com", "phone"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/userProfile"
      },
      "description": "Stores user profile information, including their role."
    },
    "/patients/{patientId}": {
      "schema": {
        "$ref": "#/entities/patient"
      },
      "description": "Stores patient records, accessible by assigned clinicians."
    },
    "/scans/{scanId}": {
      "schema": {
        "$ref": "#/entities/scan"
      },
      "description": "Stores individual scan records."
    },
    "/messages/{messageId}": {
      "schema": {
        "$ref": "#/entities/message"
      },
      "description": "Stores chat messages between users."
    }
  }
}
